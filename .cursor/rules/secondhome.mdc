Example typed fetch wrapper (src/api/client.ts)
// src/api/client.ts
import { z } from 'zod';

const BASE = import.meta.env.VITE_API_BASE || 'http://localhost:4000';

export async function apiFetch<T>(path: string, opts?: RequestInit): Promise<T> {
const res = await fetch(`${BASE}${path}`, {
credentials: 'include', // recommend httpOnly cookies for auth tokens
headers: { 'Content-Type': 'application/json' },
...opts,
});
if (!res.ok) {
const text = await res.text();
throw new Error(`API ${res.status} ${text}`);
}
return (await res.json()) as T;
}

Example service function (function-call based approach)
// src/services/caregivers.ts
import { apiFetch } from '../api/client';
import type { CaregiverProfile } from '../types';

export async function getCaregivers(params: { city?: string; service?: string; page?: number }) {
const qp = new URLSearchParams();
if (params.city) qp.set('city', params.city);
if (params.service) qp.set('service', params.service);
if (params.page) qp.set('page', String(params.page));
return apiFetch<{ data: CaregiverProfile[] }>(`/caregivers?${qp.toString()}`);
}

export async function createCaregiver(payload: Partial<CaregiverProfile>) {
return apiFetch<CaregiverProfile>('/caregivers', {
method: 'POST',
body: JSON.stringify(payload),
});
}

